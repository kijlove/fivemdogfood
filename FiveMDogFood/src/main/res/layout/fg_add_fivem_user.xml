<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/activity_vertical_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:background="@drawable/bg_input"
            android:orientation="horizontal">

            <TextView
                style="@style/defaut_text"
                android:text="编号"></TextView>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/numCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@null"></com.google.android.material.textfield.TextInputEditText>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:background="@drawable/bg_input"
            android:orientation="horizontal">

            <TextView
                style="@style/defaut_text"
                android:text="坐标"></TextView>

            <Spinner
                android:id="@+id/local"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/local"></Spinner>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:background="@drawable/bg_input"
            android:orientation="horizontal">

            <TextView
                style="@style/defaut_text"
                android:text="年龄"></TextView>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:inputType="number"></com.google.android.material.textfield.TextInputEditText>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:background="@drawable/bg_input"
            android:orientation="horizontal">

            <TextView
                style="@style/defaut_text"
                android:text="性别"></TextView>

            <RadioGroup
                android:id="@+id/sexGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/manRadio"
                    style="@style/defaut_text"
                    android:text="男"></RadioButton>

                <RadioButton
                    android:id="@+id/womanRadio"
                    style="@style/defaut_text"
                    android:text="女"></RadioButton>
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:background="@drawable/bg_input"
            android:orientation="horizontal">

            <TextView
                style="@style/defaut_text"
                android:text="属性"></TextView>

            <RadioGroup
                android:id="@+id/attributeGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/sRadio"
                    style="@style/defaut_text"
                    android:text="Sub"></RadioButton>

                <RadioButton
                    android:id="@+id/mRadio"
                    style="@style/defaut_text"
                    android:text="Dom"></RadioButton>

                <RadioButton
                    android:id="@+id/doubleRadio"
                    style="@style/defaut_text"
                    android:text="双"></RadioButton>
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:background="@drawable/bg_input"
            android:orientation="horizontal">

            <TextView
                style="@style/defaut_text"
                android:text="程度"></TextView>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/degree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@null"></com.google.android.material.textfield.TextInputEditText>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:background="@drawable/bg_input"
            android:orientation="horizontal">

            <TextView
                style="@style/defaut_text"
                android:text="职业"></TextView>


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/occupation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@null"></com.google.android.material.textfield.TextInputEditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:background="@drawable/bg_input"
            android:orientation="horizontal">

            <TextView
                style="@style/defaut_text"
                android:text="目的"></TextView>


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/objective"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@null"></com.google.android.material.textfield.TextInputEditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:background="@drawable/bg_input"
            android:orientation="horizontal">

            <TextView
                style="@style/defaut_text"
                android:text="自评"></TextView>


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/evaluate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@null"></com.google.android.material.textfield.TextInputEditText>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingTop="4dp"
            android:paddingRight="10dp"
            android:paddingBottom="4dp">

            <TextView
                style="@style/defaut_text"
                android:text="图片"></TextView>

            <ImageView
                android:id="@+id/addPhoto"
                style="@style/defaut_text"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_baseline_photo_camera_24"></ImageView>

        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/impage_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="1px"
            android:background="@color/white"
            app:layoutManager="GridLayoutManager"
            app:spanCount="3"
            tools:listitem="@layout/recycler_item_image"></androidx.recyclerview.widget.RecyclerView>

        <Button
            android:id="@+id/addUserBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="保存"></Button>
        <Button
            android:id="@+id/delUserBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
android:visibility="gone"
            android:layout_gravity="center_horizontal"
            android:text="删除"></Button>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>