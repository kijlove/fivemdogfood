<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.love.main.ui.mine.FgMine">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:orientation="vertical">

        <TextView
            android:id="@+id/userNameText"
            style="@style/defaut_text"
            android:layout_width="match_parent"
            android:layout_marginBottom="1px"
            android:background="@color/white"
            android:drawableRight="@drawable/ic_baseline_keyboard_arrow_right_24"
            android:text=""></TextView>

        <TextView
            android:id="@+id/setInviteCode"
            style="@style/defaut_text"
            android:layout_width="match_parent"
            android:layout_marginBottom="1px"
            android:background="@color/white"
            android:drawableRight="@drawable/ic_baseline_keyboard_arrow_right_24"
            android:text="设置邀请码"></TextView>

        <TextView
            android:id="@+id/setManagerIdText"
            style="@style/defaut_text"
            android:layout_width="match_parent"
            android:layout_marginBottom="1px"
            android:background="@color/white"
            android:drawableRight="@drawable/ic_baseline_keyboard_arrow_right_24"
            android:text="设置数据查看验证码"></TextView>

        <TextView
            android:id="@+id/addStaffText"
            style="@style/defaut_text"
            android:layout_width="match_parent"
            android:layout_marginBottom="1px"
            android:background="@color/white"
            android:drawableRight="@drawable/ic_baseline_keyboard_arrow_right_24"
            android:text="添加员工"></TextView>

        <TextView
            android:id="@+id/addDateLoveUser"
            style="@style/defaut_text"
            android:layout_width="match_parent"
            android:layout_marginBottom="1px"
            android:background="@color/white"
            android:drawableRight="@drawable/ic_baseline_keyboard_arrow_right_24"
            android:text="添加用户数据"></TextView>


        <TextView
            android:id="@+id/logonOutText"
            style="@style/defaut_text"
            android:layout_width="match_parent"
            android:layout_marginBottom="1px"
            android:background="@color/white"
            android:drawableRight="@drawable/ic_baseline_keyboard_arrow_right_24"
            android:text="退出"></TextView>

        <TextView
            android:id="@+id/logonInText"
            style="@style/defaut_text"
            android:layout_width="match_parent"
            android:layout_marginBottom="1px"
            android:background="@color/white"
            android:drawableRight="@drawable/ic_baseline_keyboard_arrow_right_24"
            android:text="登陆"></TextView>

        <TextView
            android:id="@+id/registerText"
            style="@style/defaut_text"
            android:layout_width="match_parent"
            android:layout_marginBottom="1px"
            android:background="@color/white"
            android:drawableRight="@drawable/ic_baseline_keyboard_arrow_right_24"
            android:text="注册"></TextView>
    </LinearLayout>

</LinearLayout>