<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/reItemLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/orgNameText"
        style="@style/defaut_text"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/text_default_padding"></TextView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cancleBtn"
            style="@style/defaut_text"
            android:layout_margin="@dimen/text_default_padding"
            android:background="@color/main_bottom_up"
            android:text="驳回"
            android:textColor="@color/white"></TextView>

        <TextView
            android:id="@+id/okBtn"
            style="@style/defaut_text"
            android:layout_margin="@dimen/text_default_padding"
            android:background="@color/main_bottom_up"
            android:text="通过"
            android:textColor="@color/white"></TextView>


    </LinearLayout>
</RelativeLayout>